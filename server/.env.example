# --------------------------------------------------------
# SERVER CONFIGURATION
# --------------------------------------------------------
PORT=8000
NODE_ENV=development
# Allowed Origins (Client, Seller, Admin)
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:5175

# --------------------------------------------------------
# DATABASE (MongoDB)
# --------------------------------------------------------
# Use localhost for dev, replace with Atlas URI in production
MONGODB_URI=mongodb://localhost:27017/gifty_db

# --------------------------------------------------------
# SECURITY (JWT & TOKENS)
# --------------------------------------------------------
# Note: Developers should generate their own strong secrets
ACCESS_TOKEN_SECRET=your_dev_access_token_secret
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_SECRET=your_dev_refresh_token_secret
REFRESH_TOKEN_EXPIRY=7d

# --------------------------------------------------------
# ADMIN CONFIGURATION
# --------------------------------------------------------
ADMIN_EMAIL=admin@gifty.com

# --------------------------------------------------------
# CLOUDINARY (Images)
# --------------------------------------------------------
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# --------------------------------------------------------
# PAYMENT GATEWAY (Razorpay)
# --------------------------------------------------------
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# --------------------------------------------------------
# EMAIL SERVICE (Nodemailer)
# --------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_NAME=Gifty Support

# --------------------------------------------------------
# AI INTEGRATION (Google Gemini)
# --------------------------------------------------------
GEMINI_API_KEY=your_gemini_api_key_here

# --------------------------------------------------------
# FRONTEND URLS
# --------------------------------------------------------
CLIENT_URL=http://localhost:5173
SELLER_URL=http://localhost:5174
ADMIN_URL=http://localhost:5175